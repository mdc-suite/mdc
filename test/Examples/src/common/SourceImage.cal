package common;

import std.stdio.Source.*;
/**
 * Standard Image Loader actor.
 */
@native actor SourceImage () ==> uint(size=8) Y,
	uint(size=16) SizeOfImage
:

	bool open := false;
	uint(size=16) WIDTH := 300;
	uint(size=16) HEIGHT := 225;
	uint(size=16) x := 0;
	uint(size=16) y := 0;
	
	init: action ==> SizeOfImage:[WIDTH,HEIGHT]
	guard not open
	do
		source_init();
		source_rewind();
		x := 0;
		y := 0;
		open := true;
	end
	
	sendY: action ==> Y:[val]
	guard open
	var uint(size=8) val
	do
		val := source_readByte();
		if x < WIDTH-1 then
			x := x+1;
		else
			if y < HEIGHT-1 then
				y := y+1;
			else
				y := 0;
				open := false;
			end
			x := 0;
		end
	end

end