// Combine.cal
//
// Author: David B. Parlour (dave.parlour@xilinx.com)
//
// idct1d pipeline stage

package com.xilinx.iDCT;

actor Combine () int(size=isz) X0, int(size=isz) X1, int(size=isz) X2, int(size=isz) X3,
bool ROW ==> int(size=osz) Y0 , int(size=osz) Y1 :

	int isz = 30;

	int osz = 24;

	int(size=3) count := 0;

	/*
  action X0:[a], X1:[b], X2:[c], X3:[d], ROW:[r] ==>
         Y0:[if r then y0 else (y0 >> 3) end], Y1:[if r then y1 else (y1 >> 3) end]
  var
    bool s = (count = 0),
    int(size=isz) o = if r then ( if s then  128 else 0 end )
                           else ( if s then 65536 else 4 end ) end,
    int(size=isz) y0 = (a + d) + o,
    int(size=isz) y1 = (b - c) + o
  do
    count := bitand( count + 1, 3 );
  end
*/
	row: action X0:[ a ], X1:[ b ], X2:[ c ], X3:[ d ], ROW:[ r ] ==> Y0:[ y0 ], Y1:[ y1 ]
	guard
		r
	var
		bool s = (count = 0) , int(size=isz) o = if s then
			128
		else
			0
		end , int(size=isz) y0 = (a + d) + o , int(size=isz) y1 = (b - c) + o
	do
		count := (count + 1) & 3;
	end

	col: action X0:[ a ], X1:[ b ], X2:[ c ], X3:[ d ], ROW:[ r ] ==> Y0:[ (y0 >> 3) ], Y1:[ y1 >> 3 ]
	var
		bool s = (count = 0) , int(size=isz) o = if s then
			65536
		else
			4
		end , int(size=isz) y0 = (a + d) + o , int(size=isz) y1 = (b - c) + o
	do
		count := (count + 1) & 3;
	end

	priority
		row > col;
	end

end